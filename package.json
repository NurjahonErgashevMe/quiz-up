{
  "name": "quiz-app",
  "version": "1.0.0",
  "description": "Quiz Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "gsap": "^3.12.5",
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.quizapp.quizup",
    "productName": "QuizUP",
    "files": [
      "main.js",
      "package.json",
      "logo.ico",
      "dist/**/*",
      "app/**/*"
